<h1>upload a book to Author: <%= @author.name %> !</h1>

<%= simple_form_for @book do |f| %>
  <%= f.text_field :author_id %>
  <%= f.text_field :title %>
  <%= f.text_field :pages %>
  <%= f.submit %>
<% end %>


<% @book.author_id = @author.id  %>
<%= simple_form_for @book do |f| %>
	<%= render partial: "book_fields", locals: {f:f, show_destroy:false} %>
  <%= f.submit %>
<% end %>

