        <input name="utf8" type="hidden" value="&#x2713;"/>
        <input name="authenticity_token" type="hidden" value="kqsPQaNpIiM7ooE/o43e0zdP6EleuFGQVXm+Aegi1AU="/>
      </div>
      <fieldset class="book">
        <div class="input string optional book_title">
          <label class="string optional" for="book_title">Title</label>
          <input class="string optional" id="book_title" maxlength="255" name="book[title]" size="50" type="text"/>
        </div>
        <br/>
        <div class="input integer optional book_pages">
          <label class="integer optional" for="book_pages">Pages</label>
          <input class="numeric integer optional" id="book_pages" name="book[pages]" step="1" type="number"/>
        </div>
        <br/>
        <!-- we specify the new custom input, and we'll use the 'thumb' version of the carrierwave upload -->
        <div class="cover">
          <div class="input image_preview optional book_cover">
            <label class="image_preview optional" for="book_cover">VÃ¤lj bild</label>
